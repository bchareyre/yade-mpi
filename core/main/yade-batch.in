def getNumCores():
	nCpu=len([l for l in open('/proc/cpuinfo','r') if l.find('processor')==0])
	if os.environ.has_key("OMP_NUM_THREADS"): return min(int(os.environ['OMP_NUM_THREADS']),nCpu)
	return nCpu
